{
  "manifest_version": 3,
  "name": "AutoDualSubtitleTranslator",
  "version": "1.0.0",
  "description": "Automatically translates Udemy video subtitles to multiple languages in real-time",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.udemy.com/*",
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.udemy.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoDualSubtitleTranslator"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://www.udemy.com/*"]
    }
  ]
}
